{
  "openapi": "3.0.0",
  "info": {
    "title": "Schedule API",
    "version": "1.0",
    "description": "Schedule API Docs",
    "contact": {
      "name": "Teodor Proca"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3000"
    }
  ],
  "paths": {
    "/auth/validate": {
      "post": {
        "description": "Validates a registered user",
        "summary": "validate",
        "responses": {
          "200": {
            "$ref": "#/components/responses/OkWithToken"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      },
      "parameters": [
        {
          "schema": {
            "type": "string"
          },
          "in": "query",
          "name": "token",
          "description": "token received at the register"
        }
      ]
    },
    "/auth/login": {
      "post": {
        "summary": "Login",
        "operationId": "post-login",
        "description": "Attempts to login",
        "responses": {
          "200": {
            "$ref": "#/components/responses/OkWithToken"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/auth/register": {
      "post": {
        "summary": "Register",
        "operationId": "post-register",
        "description": "Attempts to create a new user",
        "responses": {
          "200": {
            "$ref": "#/components/responses/OkWithToken"
          },
          "409": {
            "$ref": "#/components/responses/Conflict"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RegisterSchema"
              }
            }
          }
        }
      }
    },
    "/schedule/year/{yearNumber}/semester/{semesterNumber}": {
      "parameters": [
        {
          "schema": {
            "type": "string"
          },
          "name": "yearNumber",
          "in": "path",
          "required": true
        },
        {
          "schema": {
            "type": "string"
          },
          "name": "semesterNumber",
          "in": "path",
          "required": true
        }
      ],
      "get": {
        "summary": "getYearSemesterSchedule",
        "operationId": "get-schedule-year-yearNumber-semester-semesterNumber",
        "description": "Returns the schedule for the given year number and semester.",
        "responses": {
          "200": {
            "$ref": "#/components/responses/OkWithSchedule"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/schedule/rooms": {
      "get": {
        "summary": "getRoomSchedule",
        "description": "Returns the schedule of the given rooms",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "schedule": {
                      "type": "object",
                      "properties": {
                        "sem1": {
                          "$ref": "#/components/schemas/AllStudentsSemesterSchedule"
                        },
                        "sem2": {
                          "$ref": "#/components/schemas/AllStudentsSemesterSchedule"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        },
        "operationId": "get-schedule-rooms",
        "parameters": [
          {
            "schema": {
              "type": "string"
            },
            "in": "query",
            "name": "r",
            "description": "names of rooms separated by ,"
          }
        ]
      }
    },
    "/schedule/year/{yearNumber}": {
      "parameters": [
        {
          "schema": {
            "type": "string"
          },
          "name": "yearNumber",
          "in": "path",
          "required": true
        }
      ],
      "get": {
        "summary": "getYearSchedule",
        "operationId": "get-schedule-year-yearNumber",
        "description": "get the schedule for a given year",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "schedule": {
                      "type": "object",
                      "properties": {
                        "sem1": {
                          "$ref": "#/components/schemas/SemesterSchedule"
                        },
                        "sem2": {
                          "$ref": "#/components/schemas/SemesterSchedule"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    },
    "/secrets": {
      "post": {
        "summary": "post a new secret for the API",
        "operationId": "post-secret",
        "description": "post a new secret",
        "responses": {
          "200": {
            "$ref": "#/components/responses/OkWithMessage"
          },
          "403": {
            "$ref": "#/components/responses/Unauthorized"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SecretAddUpdate"
              }
            }
          }
        }
      },
      "patch": {
        "summary": "updates a secret with a new value",
        "operationId": "update-secret",
        "description": "updates a secret with a given value",
        "responses": {
          "200": {
            "$ref": "#/components/responses/OkWithMessage"
          },
          "403": {
            "$ref": "#/components/responses/Unauthorized"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SecretAddUpdate"
              }
            }
          }
        }
      }
    },
    "/users": {
      "get": {
        "summary": "getAllUsers",
        "operationId": "get-users",
        "description": "Gets all the users",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "users": {
                      "$ref": "#/components/schemas/UsersArray"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      },
      "post": {
        "summary": "adminCreateUser",
        "operationId": "post-admin-create-user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RegisterSchema"
              }
            }
          }
        },
        "responses": {
          "200": {
            "$ref": "#/components/responses/OkWithMessage"
          },
          "403": {
            "$ref": "#/components/responses/Unauthorized"
          },
          "409": {
            "$ref": "#/components/responses/Conflict"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      },
      "patch": {
        "summary": "updateUser",
        "operationId": "patch-users",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string"
                  },
                  "firstname": {
                    "type": "string"
                  },
                  "lastname": {
                    "type": "string"
                  },
                  "group": {
                    "type": "number"
                  },
                  "semiyear": {
                    "type": "string"
                  },
                  "year": {
                    "type": "number"
                  },
                  "faculty": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    },
    "/users/change_password": {
      "patch": {
        "summary": "changePassword",
        "operationId": "patch-users-change_password",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "oldPass": {
                    "type": "string",
                    "minLength": 6
                  },
                  "newPass": {
                    "type": "string",
                    "minLength": 6
                  }
                },
                "required": [
                  "oldPass",
                  "newPass"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    },
    "/users/{userId}": {
      "parameters": [
        {
          "schema": {
            "type": "string"
          },
          "in": "path",
          "name": "userId",
          "required": true
        }
      ],
      "delete": {
        "summary": "deleteUser",
        "operationId": "delete-user",
        "responses": {
          "200": {
            "$ref": "#/components/responses/OkWithMessage"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    },
    "/users/reset_password": {
      "post": {
        "summary": "resetPassword",
        "operationId": "post-users-reset_password",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "password": {
                    "type": "string",
                    "minLength": 6
                  }
                },
                "required": [
                  "password"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "$ref": "#/components/responses/OkWithMessage"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    }
  },
  "components": {
    "responses": {
      "Conflict": {
        "description": "Conflict",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/JsonWithSuccessAndMessage"
            }
          }
        }
      },
      "NotFound": {
        "description": "The specified resource was not found",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/JsonWithSuccessAndMessage"
            }
          }
        }
      },
      "OkWithToken": {
        "description": "OK",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/JsonWithSuccessAndToken"
            }
          }
        }
      },
      "OkWithMessage": {
        "description": "OK",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/JsonWithSuccessAndMessage"
            }
          }
        }
      },
      "OkWithSchedule": {
        "description": "OK",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "success": {
                  "type": "boolean"
                },
                "schedule": {
                  "$ref": "#/components/schemas/SemesterSchedule"
                }
              }
            }
          }
        }
      },
      "Unauthorized": {
        "description": "Unauthorized",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/JsonWithSuccessAndMessage"
            }
          }
        }
      },
      "InternalServerError": {
        "description": "Internal server error",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/JsonWithSuccessAndMessage"
            }
          }
        }
      }
    },
    "schemas": {
      "JsonWithSuccessAndToken": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "token": {
            "type": "string"
          }
        }
      },
      "JsonWithSuccessAndMessage": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "message": {
            "type": "string"
          }
        }
      },
      "Subject": {
        "type": "object",
        "properties": {
          "De la": {
            "type": "string"
          },
          "Pana la": {
            "type": "string"
          },
          "Grupa": {
            "type": "string"
          },
          "Disciplina": {
            "type": "string"
          },
          "Tip": {
            "type": "string"
          },
          "Profesor": {
            "type": "string"
          },
          "Sala": {
            "type": "string"
          },
          "Frecventa": {
            "type": "string"
          },
          "Pachet": {
            "type": "string"
          }
        }
      },
      "DaySchedule": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/Subject"
        }
      },
      "AllStudentsSemesterSchedule": {
        "type": "object",
        "properties": {
          "1": {
            "$ref": "#/components/schemas/SemesterSchedule"
          },
          "2": {
            "$ref": "#/components/schemas/SemesterSchedule"
          },
          "3": {
            "$ref": "#/components/schemas/SemesterSchedule"
          }
        }
      },
      "SemesterSchedule": {
        "type": "object",
        "properties": {
          "Luni": {
            "$ref": "#/components/schemas/DaySchedule"
          },
          "Marti": {
            "$ref": "#/components/schemas/DaySchedule"
          },
          "Miercuri": {
            "$ref": "#/components/schemas/DaySchedule"
          },
          "Joi": {
            "$ref": "#/components/schemas/DaySchedule"
          },
          "Vineri": {
            "$ref": "#/components/schemas/DaySchedule"
          }
        }
      },
      "User": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string"
          },
          "firstname": {
            "type": "string"
          },
          "lastname": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "group": {
            "type": "string"
          },
          "semiyear": {
            "type": "string"
          },
          "year": {
            "type": "string"
          },
          "faculty": {
            "type": "string"
          },
          "verifies": {
            "type": "string"
          },
          "admin": {
            "type": "string"
          },
          "_id": {
            "type": "string"
          },
          "createdAt": {
            "type": "string"
          },
          "updatedAt": {
            "type": "string"
          },
          "__v": {
            "type": "string"
          }
        }
      },
      "UsersArray": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/User"
        }
      },
      "RegisterSchema": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "firstname": {
            "type": "string"
          },
          "lastname": {
            "type": "string"
          },
          "username": {
            "type": "string"
          }
        },
        "required": [
          "firstname",
          "lastname",
          "email",
          "password"
        ]
      },
      "SecretAddUpdate": {
        "type": "object",
        "properties": {
          "key": {
            "type": "string"
          },
          "value": {
            "type": "string"
          },
          "env": {
            "type": "string"
          }
        },
        "required": [
          "key",
          "value",
          "env"
        ]
      }
    }
  }
}